{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": { "*": ["types/*"] },
    "module": "CommonJS",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "removeComments": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "target": "es2018"
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "examples",
    "tests",
    "dist"
  ],
  "typedocOptions": {
    "mode": "file",
    "out": "docs",
    "theme": "markdown"
  }
}